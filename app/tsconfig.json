{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2015"
    ],
    "outDir": "./dist/webpack_bundles/cjs/",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "strict": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*.ts*",
    "src/**/*.d.ts*",
    "src/types/**/*.d.ts*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib"
  ]
}
